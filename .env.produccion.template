# Configuración de Producción - HydroFlow Manager v1.04
#
# INSTRUCCIONES:
# 1. Copiar este archivo como .env en el directorio de la aplicación
# 2. Configurar los valores según el entorno del cliente
# 3. NUNCA incluir el archivo .env en el repositorio o distribución

# ============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================================================

# Host del servidor MySQL (localhost si está en la misma máquina)
DB_HOST=localhost

# Puerto de MySQL (por defecto 3306, cambiar si usa otro puerto)
DB_PORT=3307

# Esquema manager (contiene usuarios, catálogos, proyectos)
DB_MANAGER_SCHEMA=manager

# Esquema de ejemplo por defecto (puede ser cert_dev o el código del primer proyecto)
DB_EXAMPLE_SCHEMA=cert_dev

# ============================================================================
# CREDENCIALES DE BASE DE DATOS
# ============================================================================

# Usuario de MySQL para la aplicación
# IMPORTANTE: NO usar root en producción, crear un usuario específico
DB_USER=hidroflow_app

# Contraseña del usuario de base de datos
# IMPORTANTE: Usar una contraseña segura
DB_PASSWORD=CAMBIAR_ESTA_CONTRASEÑA

# ============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================================================

# Nivel de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Directorio para guardar configuraciones de informes
INFORMES_DIR=./informes_guardados

# Directorio para exportar informes generados
EXPORT_DIR=./exportados

# ============================================================================
# BACKUP AUTOMÁTICO (Opcional)
# ============================================================================

# Habilitar backups automáticos (true/false)
AUTO_BACKUP_ENABLED=false

# Directorio para backups
BACKUP_DIR=./backups

# Frecuencia de backup automático (horas)
BACKUP_FREQUENCY_HOURS=24

# ============================================================================
# NOTAS DE SEGURIDAD
# ============================================================================

# 1. Este archivo contiene información sensible
# 2. Configurar permisos restrictivos: chmod 600 .env
# 3. No compartir este archivo
# 4. Hacer backup seguro de esta configuración
# 5. Cambiar contraseñas por defecto

# ============================================================================
# CREACIÓN DE USUARIO DE BASE DE DATOS
# ============================================================================

# Para crear el usuario hidroflow_app en MySQL:
#
# mysql -u root -p
# CREATE USER 'hidroflow_app'@'localhost' IDENTIFIED BY 'contraseña_segura';
# GRANT SELECT, INSERT, UPDATE, DELETE ON *.* TO 'hidroflow_app'@'localhost';
